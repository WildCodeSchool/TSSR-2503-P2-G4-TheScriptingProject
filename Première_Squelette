#Fonctions
Fonction groupeadmin { 

}
Fonction ajoutgroupelocal {
    
}
Fonction sortirgroupelocal {

}
Fonction groupeappartenance {

}
Fonction nombredisques {

}
Fonction partition {

}
Fonction espacedisquerestant {

}
Fonction nometespacedisquedundossier {

}
Fonction listedeslecteursmontés {

}
Fonction creationderepertoire {

}
Fonction modificationderepertoire {

}
Fonction suppressionderepertoire {

}
Fonction droitpermissiondossier {

}
Fonction droitpermissionfichier {

}
Fonction logiciel  {

}
Fonction systeme {

}
Fonction Journauxdevenements {

}

#menu principal
#boucle While pour toujours revenir par defaut au debut aprés une utilisation
do {
    Clear-Host
    Write-Host "Menu principal :"
    Write-Host "1 - Groupe"
    Write-Host "2 - Disque et Répertoire"
    Write-Host "3 - Droits d'accès"
    Write-Host "4 - Gestion système"
    Write-Host "5 - Quitter"

    $mainChoice = Read-Host "Votre réponse en chiffre"

    #switch du menu groupe
    switch ($mainChoice) {
    
        1 {
            do {
                #switch sous-menu groupe d'administration
                Write-Host "1 - Ajouter à un groupe d'administration"
                Write-Host "2 - Ajouter à un groupe local"
                Write-Host "3 - Sortir d'un groupe local"
                Write-Host "4 - Voir groupe d'appartenance"
                Write-Host "5 - Quitter"
                $menuGroupe = Read-Host "Votre réponse en chiffre"
               
               
                switch ($menuGroupe) {
                    1 { Fonction groupeadmin }
                    2 { Fonction ajoutgroupelocal }
                    3 { Fonction sortirgroupelocal }
                    4 { Fonction groupeappartenance }
                    5 { break }
                    default { Write-Host "Erreur de saisie" }
                }
            } while ($true)
        }

        2 {
            do {
                #sous menu du groupe disque et repertoire
                Write-Host "1 - Disque"
                Write-Host "2 - Répertoire"
                Write-Host "3 - Quitter"
                $menuDiskDir = Read-Host "Votre réponse en chiffre"
                
                switch ($menuDiskDir) {
                    1 {
                        do {
                            #sous sous menu de disque
                            Write-Host "1 - Nombre de disques"
                            Write-Host "2 - Partition"
                            Write-Host "3 - Espace disque restant"
                            Write-Host "4 - Nom et espace disque d'un dossier"
                            Write-Host "5 - Liste des lecteurs montés"
                            Write-Host "6 - Quitter"
                            $menuDisque = Read-Host "Votre réponse en chiffre"

                            switch ($menuDisque) {
                                1 { Fonction nombredisques}
                                2 { Fonction partition}
                                3 { Fonction espacedisquerestant}
                                4 { Fonction nometespacedisquedundossier}
                                5 { fonction listedeslecteursmontés}
                                6 { break }
                                default { Write-Host "Erreur de saisie" }
                            }
                        } while ($true)
                    }

                    2 {
                        do {
                            #sous sous menu de repertoire
                            Write-Host "1 - Création de répertoire"
                            Write-Host "2 - Modification de répertoire"
                            Write-Host "3 - Suppression de répertoire"
                            Write-Host "4 - Quitter"
                            $menuRepertoire = Read-Host "Votre réponse en chiffre"

                            switch ($menuRepertoire) {
                                1 { Fonction creationderepertoire }
                                2 { Fonction modificationderepertoire}
                                3 { Fonction suppressionderepertoire }
                                4 { break }
                                default { Write-Host "Erreur de saisie" }
                            }
                        } while ($true)
                    }

                    3 { break }
                    default { Write-Host "Erreur de saisie" }
                }
            } while ($true)
        }

        3 {
            #switch du menu droit d'accès
            do {
                Write-Host "1 - Droit/permissions sur un dossier"
                Write-Host "2 - Droit/permissions sur un fichier"
                Write-Host "3 - Quitter"
                $menuDroitAcces = Read-Host "Votre réponse en chiffre"

                switch ($menuDroitAcces) {
                    1 { Fonction droitpermissiondossier}
                    2 { Fonction droitpermissionfichier}
                    3 { break }
                    default { Write-Host "Erreur de saisie" }
                }
            } while ($true)
        }

        4 {
            #Sous menu de Gestion systéme
            do {
                Write-Host "1 - Logiciel"
                Write-Host "2 - Système"
                Write-Host "3 - Journaux d'événements"
                Write-Host "4 - Quitter"
                $menuSystem = Read-Host "Votre réponse en chiffre"

                switch ($menuSystem) {
                    1 { Fonction logiciel }
                    2 { Fonction systeme }
                    3 { Fonction Journauxdevenements}
                    4 { break }
                    default { Write-Host "Erreur de saisie" }
                }
            } while ($true)
        }

        5 { break }
        default { Write-Host "Erreur de saisie" }
    }

} while ($true)
